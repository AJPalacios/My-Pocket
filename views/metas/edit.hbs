{{> nav}}
{{> sidenav}}

<div class="row center-xs">
  <div class="col-md-10 offset-2">
    <div class="box">
      <h1>Editar meta {{meta.nombre}}</h1>
      <form action="/metas/edit/{{meta._id}}" method="POST">
        <table class="table table-hover tabla-gastos">
          <thead> 
          </thead> 
          <tbody> 
              <tr> 
                <td>Nombre</td> 
                <td align="center">
                  <input type="text" name="nombre" id="nombre" value="{{meta.nombre}}">
                </td> 
              </tr>
              <tr> 
                <td>Fecha objetivo:</td> 
                <td><input type="date" name="fechaFin" id="nombre" value="{{meta.fechaFin}}"></td> 
              </tr>
              <tr> 
                <td>Cantidad Objetivo:</td> 
                <td>
                  $ <input type="number" class="cant" step="0.01" name="cantidadObjetivo" id="cantidadObjetivo" value="{{meta.cantidadObjetivo}}"> 
                </td> 
              </tr>
              <tr>
                <td>Cantidad Inicial:</td>
                <td>
                  $ <input type="number" class="cant" name="cantidadInicial" id="cantidadInicial" value="{{meta.cantidadInicial}}">
                </td>
              </tr>
              <tr>
                <td>Cantidad Actual:</td>
                <td>
                  $ <input type="number" class="cant" name="cantidadActual" id="cantidadActual" value="{{meta.cantidadActual}}">
                </td>
              </tr>
          </tbody> 
        </table>

    
        <input type="submit" value="Guardar" class="btn btn-primary">
</form>
    </div>
  </div>
</div>

