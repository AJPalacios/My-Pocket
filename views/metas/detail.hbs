<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
{{> nav}}
{{> sidenav}}

<div class="row center-xs">
  <div class="col-md-7 offset-2">
    <div class="box">
      <h1>Meta {{nombre}}</h1>
    <section>
      <table class="table table-hover tabla-ahorros">
        <tbody>
          <tr>
            <td>
              Cantidad Objetivo: 
            </td>
            <td>${{cantidadObjetivo}}</td>
          </tr>
          <tr>
            <td>
              Iniciaste con: 
            </td>
            <td>${{cantidadInicial}}</td>
        </tr>
        <tr>
          <td>
            Hoy tienes: 
          </td>
          <td>${{cantidadActual}}</td>
        </tr>
        <tr>
            <td>
              Fecha Límite: 
            </td>
            <td>{{dateFormat fechaFin "D-MMMM-YYYY"}}</td>
          </tr>
        </tbody> 
      </table>
    </section> 
    <br><br><br>
    <button class="btn btn-primary"><a href="/metas/list">Atrás</a></button>
    <button class="btn btn-primary"><a href="/metas/edit/{{this.id}}">Editar</a></button>
    </div>
  </div>
  
</div>





<script>  
  document.getElementById('see1').addEventListener('click',function(){
    document.getElementById('mas').style.display="block";
    document.getElementById('menos').style.display="none"
  })
  document.getElementById('see2').addEventListener('click',function(){
    document.getElementById('menos').style.display="block";
    document.getElementById('mas').style.display="none"
  })
</script>

<style>
  .bd{
    width: 70%;
    margin-left: 20%;
  }
</style>