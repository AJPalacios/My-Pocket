<h1>Mis ahorros</h1>
<section>
  <table class="table table-hover tabla-ahorros">
   <thead> 
        <th>Concepto</th> 
        <th>Cantidad</th>
        <th></th>
    </thead> 
    <tbody> 
        {{#each ahorros}} 
        <tr> 
            <td><a href="/ahorros/detail/{{this.id}}">{{this.nombre}}</a></td> 
            <td>{{this.cantidad}}</td> 
            <td><a href="/ahorros/delete/{{this.id}}"><i class="far fa-trash-alt"></i></a></td>
        </tr>
        {{/each}}
        <tr> 
            <td><b>TOTAL</b></td> 
            <td>{{total}} </td>  
        </tr> 
    </tbody> 
  </table>
</section><hr>
<button title="Agrega un nuevo ahorro" id="show"  class="btn btn-primary" placeholder="Agrega tu ahorro">+</button><br><br>
<form action="/ahorros/new" method="POST" id="agregar" class="form-inline">
  <div class="form-group">
    <input type="text" name="nombre" placeholder="Concepto de tu ahorro" id="nombre" class="form-control" required>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <label class="sr-only" for="cantidad">Cantidad</label>
      <input type="number" name="cantidad" placeholder="¿Con cuánto comienzas?" id="cantidad" class="form-control" required>
    </div>
    <button id="check" type="submit" name="check" class="btn btn-primary" title="OK">✓</button>
    <button onclick="inputsHide()" class="btn btn-primary" title="Cancel">✖</button>
  </div>
</form>


<script>
   window.onload=load()
   function load() {
    document.getElementById('agregar').style.display="none"
  }
  document.getElementById('show').addEventListener('click',function(){
    showInputs()
  })
  
  function showInputs(){
    document.getElementById('agregar').style.display="block"
    document.getElementById("nombre").focus()
  }
  function inputsHide(){
    document.getElementById('nombre').value=""
    document.getElementById('cantidad').value=""
    document.getElementById('agregar').style.display="none"
  }
</script>