<h1>Editar ahorro {{nombre}}</h1>
<form action="/ahorros/edit/{{this.id}}" method="POST">
<p>
  <label for="nombre">Nombre:</label><br>
  <input type="text" name="nombre" id="nombre" value="{{nombre}}">
  <br>
</p>
<p class="form-inline">
  <div class="form-group"></div>
  Cantidad Inicial:
  <div class="form-group">
     <div class="input-group">
      <div class="input-group-addon">$</div>
      <label class="sr-only" for="cantidad">Cantidad</label>
      <input type="number" name="cantidadInicial" id="inicial" value="{{cantidadInicial}}">
    </div>
  </div> 
</p>

<p class="form-inline">
  <div class="form-group"></div>
  Cantidad Actual:
  <div class="form-group">
     <div class="input-group">
      <div class="input-group-addon">$</div>
      <label class="sr-only" for="cantidad">Cantidad</label>
      <input type="number" name="cantidad" id="cantidad" value="{{cantidad}}">
    </div>
  </div> 
</p>

<input type="submit" value="Guardar" class="btn btn-primary">
</form>
